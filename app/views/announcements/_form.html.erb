<%= form_with(model: @announcement, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>

  <div>
    <%= form.label :publication_date %>
    <%= form.date_field :publication_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>