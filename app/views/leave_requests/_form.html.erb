<%= form_with(model: @leave_request, local: true) do |form| %>
  <div>
    <%= form.label :leave_start_date %>
    <%= form.date_field :leave_start_date %>
  </div>

  <div>
    <%= form.label :leave_end_date %>
    <%= form.date_field :leave_end_date %>
  </div>

  <div>
    <%= form.label :reason %>
    <%= form.text_area :reason %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>